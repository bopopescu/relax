import sys
from re import match

from main_relax_fit import main_relax_fit
from main_palmer import main_palmer
from data import data
from file_ops import file_ops

sys.path.append(sys.path[0])
sys.path[0] = '.'
from usr_param import usr_param

from functions.functions import functions
from functions.chi2 import chi2
from functions.jw import jw
from functions.relax import relax


from minimise.grid import grid
from minimise.levenberg_marquardt import levenberg_marquardt
from minimise.test import test

from modsel.asymptotic import asymptotic
from modsel.bootstrap import bootstrap
from modsel.cross_validation import cv
from modsel.exp_overall_disc import exp_overall_disc
from modsel.farrow import farrow
from modsel.palmer import palmer
from modsel.overall_disc import overall_disc

from palmer.star import star


class mf:
	def __init__(self):
		"The top level class."

		self.version = 0.5
		self.print_intro()

		# Debugging option, 0 = off, 1 = on.
		self.debug = 0

		# Import the user parameters.
		self.usr_param = usr_param()
		if not self.version == self.usr_param.version:
			print "The versions numbers of the program and the file 'usr_param.py' do not match."
			print "Copy the correct version to the working directory, quitting program."
			sys.exit()

		# Initialise the class self.mf.function to place program functions into.
		self.functions = functions(self)

		# Testing minimiser!  Temp code.
		self.data = data(self)
		self.file_ops = file_ops(self)
		self.functions.relax = relax(self)
		self.functions.chi2 = chi2()
		self.functions.jw = jw()
		test(self)
		sys.exit()

		# Select the behaviour of the program.
		if match(self.usr_param.program_type, 'relax_fit'):
			self.data = data(self)
			self.file_ops = file_ops(self)
			main_relax_fit(self)

		if match(self.usr_param.program_type, 'mf'):
			self.calc_relax_data = calc_relax_data(self)
			self.calc_chi2 = calc_chi2()
			self.data = data(self)
			self.file_ops = file_ops(self)
			print "Not implemented yet, quitting program."
			sys.exit()

		if match(self.usr_param.program_type, 'palmer'):
			self.calc_relax_data = calc_relax_data(self)
			self.calc_chi2 = calc_chi2()
			self.data = data(self)
			self.file_ops = file_ops(self)
			self.star = star(self)
			main_palmer(self)


	def print_intro(self):
		"Print the program introduction."

		print """

		                      mf v0.5

		Program to process all model-free input and output.

		"""


if __name__ == "__main__":
	mf()
